<%= render partial: './shared/header' %>

<% if session[:user_id] %>
  <%= link_to "Log Out", logout_path, method: :delete %>
<% else %>
  <h2><%= button_to "Create a New User", register_path, method: :get %></h2>
  <%=link_to "Log In", login_path, method: :get %>
<% end %>

<div id="users">
  <h3>Existing Users</h3>
  <% @users.each do |user| %>
    <div id="user_<%= user.id %>">
      <li><%= link_to user.email, user_path(user) %></li>
    </div>  
  <% end %> 
</div>
